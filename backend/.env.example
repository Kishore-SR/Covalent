# MongoDB Connection String - REQUIRED
# Format must be: mongodb+srv://username:password@cluster.mongodb.net/database
# or: mongodb://username:password@localhost:27017/database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secret for authentication - REQUIRED
# This should be a strong random string
JWT_SECRET_KEY=your_jwt_secret_key_here

# GetStream.io API Credentials - REQUIRED for chat functionality
STREAM_API_KEY=your_stream_api_key
STREAM_API_SECRET=your_stream_api_secret

# Server Configuration - OPTIONAL
PORT=5001
NODE_ENV=production
